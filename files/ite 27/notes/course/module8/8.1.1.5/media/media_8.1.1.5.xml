   <component id="ID_s1_txt01">
  <text><![CDATA[<b>OSPF Area 0</b>]]></text> 
  </component>	
    <component id="ID_Title_txt01">
		<text><![CDATA[<b></b>]]></text>
	</component>
	
	<component id="ID_Body_txt01">
		<text><![CDATA[<textformat blockindent='-14'><ul><li>Area 0 is also called the backbone area.</li><li>Single-Area OSPF is useful in smaller networks with few routers.</li></ul></textformat>]]></text>
	</component>
  
  
  
  <component id="ID_s2_txt01">
  <text><![CDATA[<b>Area 1</b>]]></text> 
  </component>	
  
